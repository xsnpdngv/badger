{
  "name": "badger",
  "displayName": "Badger",
  "description": "Adds lightweight, filesystem-driven signals to the VS Code Explorer",
  "version": "1.1.7",
  "publisher": "voidcsillag",
  "icon": "img/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xsnpdngv/badger"
  },
  "categories": [
    "Testing"
  ],
  "keywords": [
    "pass",
    "fail",
    "status",
    "test",
    "testing",
    "marker",
    "filesystem",
    "folder",
    "directory",
    "explorer"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWorkspaceFoldersChanged",
    "onFileSystem:file"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Badger",
      "properties": {
        "badger.watchDirectories": {
          "type": "array",
          "default": [
            "tests"
          ],
          "items": {
            "type": "string"
          },
          "description": "Directories under which creation of new test folders should be reported."
        }
      }
    },
    "commands": [
      {
        "command": "badger.openLastTestFolder",
        "title": "Open Latest Test Folder"
      },
      {
        "command": "badger.dismissStatus",
        "title": "Dismiss Test Notification"
      }
    ]
  }
}
